<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import io.github.palexdev.materialfx.controls.MFXComboBox?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.atvouzx.financetracker.Controller.TransactionsController">
    <children>
        <!-- Form to add new transaction -->
        <HBox spacing="10.0">
            <children>
                <Label text="Amount:" />
                <TextField fx:id="amountField" />
                <Label text="Category:" />
                <MFXComboBox fx:id="categoryComboBox" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
        <HBox spacing="10.0">
            <children>
                <Label text="Notes:" />
                <TextArea fx:id="notesTextArea" prefHeight="100.0" prefWidth="300.0" />
                <VBox spacing="10.0">
                    <children>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Date:" />
                                <DatePicker fx:id="datePicker" />
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Wallet:" />
                                <MFXComboBox fx:id="walletComboBox" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
        <Button mnemonicParsing="false" onAction="#saveTransaction" text="Save Transaction" />

        <!-- Filters for transactions -->
        <HBox spacing="10.0" alignment="CENTER">
            <children>
                <Label text="Filter by Category:" />
                <MFXComboBox fx:id="filterCategoryComboBox" />
                <Label text="Filter by Wallet:" />
                <MFXComboBox fx:id="filterWalletComboBox" />
                <Label text="Search by Notes:" />
                <TextField fx:id="filterNotesField" />
                <Button mnemonicParsing="false" onAction="#applyFilters" text="Apply Filters" />
                <Button mnemonicParsing="false" onAction="#clearFilters" text="Clear Filters" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>

        <!-- Table to display transactions -->
        <TableView fx:id="transactionsTable">
            <columns>
                <TableColumn fx:id="amountColumn" text="Amount">
                    <cellValueFactory>
                        <PropertyValueFactory property="amount"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="categoryColumn" text="Category">
                    <cellValueFactory>
                        <PropertyValueFactory property="category"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="notesColumn" text="Notes">
                    <cellValueFactory>
                        <PropertyValueFactory property="notes"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="dateColumn" text="Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="date"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="walletColumn" text="Wallet">
                    <cellValueFactory>
                        <PropertyValueFactory property="walletName"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
